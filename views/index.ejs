<% include partials/header.ejs %>


<div class="ui main text container" >
    <div class="ui huge header">RESTful Blog App</div>
    <div class="ui top attached segment" >
        <div class="ui divided items">
            
            <% results.forEach(function(result){ %>
               <div class="item" >
                       <div class="image">
                            <img src="<%=result.img%>">
                       </div>
                       <div class="content">
                           <a class="header" href="/blogs/<%=result._id%>"><h2><%=result.title%></h2></a>
                       </div>
                       <div class="meta">
                           <p>Created On <%= result.date.toDateString() %></p>
                       </div>
                       <div class="description">
                           <p>
                               <%= result.body.substring(0, 100) %>...
                           </p>
                       </div>
                       <div class="extra">
                            <a class="ui floated basic violet button" href="/blogs/<%=result._id%>">Read More</a>
                       </div>
                     
               </div>
            <% }); %>
            
        </div>
    </div>
</div>




